# BTS 티켓팅 - 5계정 멀티세션 설정
# 이 파일을 .env.local에 복사하고 실제 정보로 교체하세요

# ============ 계정 1 (메인) ============
INTERPARK_ID_1=account1@email.com
INTERPARK_PWD_1=password1
BIRTH_DATE_1=000101

# ============ 계정 2 (서브1) ============
INTERPARK_ID_2=account2@email.com
INTERPARK_PWD_2=password2
BIRTH_DATE_2=000102

# ============ 계정 3 (서브2) ============
INTERPARK_ID_3=account3@email.com
INTERPARK_PWD_3=password3
BIRTH_DATE_3=000103

# ============ 계정 4 (백업1) ============
INTERPARK_ID_4=account4@email.com
INTERPARK_PWD_4=password4
BIRTH_DATE_4=000104

# ============ 계정 5 (백업2) ============
INTERPARK_ID_5=account5@email.com
INTERPARK_PWD_5=password5
BIRTH_DATE_5=000105

# ============ 공연 설정 ============
CONCERT_URL=https://tickets.interpark.com/goods/XXXXXXX

# ============ CapSolver (캡차 솔버) ============
CAPSOLVER_API_KEY=CAP-YOUR-API-KEY-HERE

# ============ IPRoyal 프록시 ============
# 형식: host:port:username:password
PROXY_HOST=geo.iproyal.com
PROXY_PORT=12321
PROXY_USER=YOUR_USERNAME
PROXY_PASS=YOUR_PASSWORD_country-kr

# ============ 세션 설정 ============
# 총 세션 수 (권장: 15-20)
NUM_SESSIONS=18

# 계정별 세션 분배 (콤마 구분: 계정1,계정2,계정3,계정4,계정5)
# 합계가 NUM_SESSIONS와 일치해야 함
SESSIONS_PER_ACCOUNT=4,4,4,3,3

# 계정별 좌석 전략
# vip_only: VIP만 시도
# vip_first: VIP 먼저, 실패시 R석
# all: 모든 좌석
SEAT_STRATEGY_1=vip_only
SEAT_STRATEGY_2=vip_only
SEAT_STRATEGY_3=vip_first
SEAT_STRATEGY_4=all
SEAT_STRATEGY_5=all

# ============ 타이밍 설정 ============
# 티켓 오픈 시간 (24시간제)
OPEN_HOUR=20
OPEN_MINUTE=0

# ============ 기타 설정 ============
DEBUG=false
HEADLESS=false
SAVE_SCREENSHOTS=true
